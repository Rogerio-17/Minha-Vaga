<!-- CONTAINER -->
<div id="top-container" class="container-fluid">
  <h1 id="main-title" class="text-center">Encontre o emprego dos sonhos</h1>
  <p id="main-subtitle" class="text-center">
    Site focado em vagas de técnologia, sendo a grande maioria focada no
    HomeOficce.
  </p>
  <form id="search-form" class="form-inline" action="/" method="GET">
    <div class="form-group col-md-10">
      <input
        type="text"
        class="form-control"
        id="vaga"
        name="vaga"
        placeholder="Digete a vaga que você está buscando"
      />
    </div>

    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
  </form>
</div>

<!-- MAIN -->
<main>
  <div id="vagas-container" class="container">
    <div class="row">
      <div class="col-md-12">
      {{#if search}}
      <h2 id="vagas-list-title">Resultado da pesquisa: {{search}}</h2>
      {{else}}
      <h2 id="vagas-list-title">Veja nossas vagas em destaque</h2>
      {{/if}}
        
        <ul id="vaga-list" class="list-groud">
          {{#each vagas}}

            <li class="list-group-item {{#if dataValues.new_job}}new-vaga{{/if}}">
              <img src="/img/companhia.png" alt="Companhia" />
              <p>{{dataValues.company}}</p>
              <h2>{{dataValues.title}}</h2>
              <p>Salário: R${{dataValues.salary}}</p>
              <span class="new-job-label">Nova</span>
              <a class="btn btn-primary" href="">Ver vaga</a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</main>